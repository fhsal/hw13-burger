<div class="container-flex">
    <div><img src="/assets/img/burger-clipart-easy-3-transparent.png" id="burger-icon" height="300px" width="350px">
    </div>
    <h1 class="heading">Eat-Da-Burger!</h1>
    <br>
    <br>
    <br>
    <div class="row d-flex burger-div">
        <div class="col-md-4">
            <ul id="burgers-to-eat">
                <h3 font-weight:"bold">Burgers to Eat!</h3>
                <br>
                {{#each burgers}}
                {{#unless devoured}}
                <li style: "float: left">
                    <p style: "margin-left: 50px; text-align: left"> {{burger_name}} <button
                            style="float: right; margin-right: 75px;" class="devour btn btn-warning btn-sm "
                            data-burgerid="{{id}}">Devour
                            it!</button></p>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4 burger-input">
            <br>
            <br>
            <br>
            <form action="/api/burgers" method="POST">
                <textarea type="text" name="burger" id="burger-input" class="col-md-10"
                    placeholder="enter name of Burger you want to Eat!"></textarea>
                <p>click button to add</p>
                <button type="submit" id="add-burger" class="btn btn-dark btn-lg">Add Burger </button>
            </form>
        </div>
        <div class="col-md-4">
            <ul id="burgers-devoured">
                <h3>Burgers Devoured!</h3>
                <br>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <p>{{burger_name}}</p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <br>

</div>